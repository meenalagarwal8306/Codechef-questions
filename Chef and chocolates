#include <iostream>
using namespace std;

int main() 
{
    int t;
    cin>>t;
    while(t--){
	int c,x,y,x1;
	cin>>c>>x>>y;
	x1=(c-x)*y;
	cout<<x1<<endl;
    }
	return 0;
}
